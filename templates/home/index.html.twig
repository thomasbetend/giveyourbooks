{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<div class="container w-75 d-flex flex-row flex-wrap">
    <div class="d-flex flex-column align-items-center col-12">
        <h1 class="mt-4">Donnez vos livres !!!</h1>
        <h3 class="text-center text-secondary mt-1">Quelqu'un autour de vous a s√ªrement envie de les lire.</h3>
        <div>
            <a class="btn btn-primary text-white mt-3" href="{{ path('app_login') }}">Je donne</a>
        </div>
    </div>
    {% for bookAd in bookAds %}
        {% embed "./_parts/book_ad_card.html.twig" %}
            {% block actions %}
                {{ parent() }}
                {% if is_granted('ROLE_USER') and app.user.id != bookAd.user.id %}
                    <a href="{{ path('app_book_ad_show', { slug: bookAd.slug }) }}" class="btn btn-primary">Je prends</a>
                {% endif %}
            {% endblock %}
        {% endembed %}    
    {% endfor %}
</div>

{% endblock %}