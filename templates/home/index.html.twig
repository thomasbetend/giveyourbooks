{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% for bookAd in bookAds %}

<div class="">
    <div class="card mt-4">
        <img class="card-img-top" src="{{ asset('images/' ~ bookAd.Image[0].path) | imagine_filter('list_thumbnail') }}" alt="Card image cap" width="100">
        <div class="card-body">
            <h5 class="card-title">{{ bookAd.title}}</h5>
            <p class="card-text">{{ bookAd.description }}</p>
            <a href="#" class="btn btn-primary">Je prends</a>
        </div>
    </div>
</div>

{% endfor %}

{% endblock %}
