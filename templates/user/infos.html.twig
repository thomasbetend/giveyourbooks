{% extends "base.html.twig" %}

{% block body %}
<div class="container w-50">
<h1 class="mt-4">Vos infos</h1>
{% if app.user and is_granted('ROLE_USER') %}
    <h6 class="mb-3">{{ user.email }}</h6>
    <div class="d-flex align-items-center">
        <p>Mot de passe : ••••••• </p>
        <a href="{{ path('app_change_password') }}" class="btn btn-default pb-4 mx-4">Modifier</a>
    </div>
    <div class="d-flex align-items-center">
        <p>Pseudo : {{ user.pseudo|capitalize }}</p>
        <a href="{{ path('app_change_pseudo') }}" class="btn btn-default pb-4 mx-4">Modifier</a>
    </div>
    <p>Compte créé le {{ user.createdAt|date("d/m/Y") }}</p>
</div>
{% endif %}

{% endblock %}