<div class="card mt-4 col-4">
    <img class="card-img-top card-background-image" src="{{ asset('images/' ~ bookAd.imagePath) | imagine_filter('list_thumbnail') }}" alt="Card image cap">
    <div class="card-body">
        <div class="title-category-box d-flex justify-content-between">
            <h5 class="card-title">{{ bookAd.title|u.truncate(10, ' ...', false)|capitalize }}</h5>
            <p class="card-text small-text px-2">{{ bookAd.category }}</p>
        </div>
        <p class="card-text">{{ bookAd.description|u.truncate(20, ' ...', false) }}</p>
        <p class="card-text"><small>Publié par {{ bookAd.user }} à {{bookAd.user.city}} le {{ bookAd.createdAt|date("m/d/Y") }}</small></p>
        
        {% block actions %}
        {% endblock %}
    </div>
</div>